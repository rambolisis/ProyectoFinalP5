@model BoxManager.BS.Models.WodClienteModel
@{
    ViewBag.Title = "Wod Clientes";
    ViewBag.FechaActual = DateTime.Now;
}


<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Guardar", "WodCliente", new { Id = Model.Id, ReturnUrl = "/WodCliente/Index" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Fecha, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Fecha, "{0:d}", new { htmlAttributes = new { @class = "form-control datepicker", Value = @ViewData["fechaActual"], @type = "date" } })
                    @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.IdCliente, "Cliente", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdCliente, Model.Clientes, "-- Select Status --")
                    @Html.ValidationMessageFor(m => m.IdCliente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Descripcion, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.IdTipoConteo, "Tipo Conteo", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdTipoConteo, Model.TiposConteo, "-- Select Status --")
                    @Html.ValidationMessageFor(m => m.IdTipoConteo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
